@model MyShop.Entities.Models.Category
@{
	ViewBag.CardTitle="Create Category";
	ViewBag.PageTitle = "Category Mangment";
}
<form asp-action="Create" method="post" class="p-4 rounded shadow-sm bg-light">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="ID" />

    <div class="mb-4">
        <label asp-for="Name" class="form-label fw-bold"></label>
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger small"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Description" class="form-label fw-bold"></label>
        <textarea id="default-editor"asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger small"></span>
    </div>

    <button type="submit" class="btn btn-primary px-4">Create</button>
</form>
@section scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>

        tinymce.init({
            selector: 'textarea#default-editor',
            menubar: false,
            height: 200,
           
        });
    </script>
}