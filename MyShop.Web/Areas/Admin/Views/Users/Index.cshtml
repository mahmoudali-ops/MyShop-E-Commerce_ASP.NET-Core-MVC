@model IEnumerable<ApplicationUser>
@{
    ViewBag.CardTitle = "View Users";
    ViewBag.PageTitle = "Users Mangment";
}

<table class="table table-hover" width="100%">
    <tr>
        <td>Name</td>
        <td>Email</td>
        <td>Phone Number</td>
        <td>View Action</td>
    </tr>
    @foreach (ApplicationUser item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.PhoneNumber</td>
            <td>
                @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                {
                    <a asp-action="LockUnLock" class="btn btn-success" asp-route-id="@item.Id">
                        <i class="fas fa-lock-open"></i>
                    </a>
                }else
                {
                    <a asp-action="LockUnLock" class="btn btn-danger" asp-route-id="@item.Id" >
                        <i class="fas fa-user-lock"></i>
                    </a>
                }

                <a href="~/Admin/Users/Delete/@item.Id" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
    }
</table>

<a href="~/Identity/Account/Register" class="btn btn-primary">Create</a>


