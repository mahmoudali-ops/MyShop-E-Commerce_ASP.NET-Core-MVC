<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

<!-- AdminLTE CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
<style>
    .small-box {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 1rem;
        color: white;
    }

        .small-box:hover {
            transform: translateY(-5px) scale(1.03);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .small-box .inner h3 {
            font-size: 2.2rem;
            font-weight: 700;
        }

        .small-box .inner p {
            font-size: 1.1rem;
            font-weight: 500;
        }

    .small-box-footer {
        color: #fff !important;
        font-weight: 500;
        padding: 10px 15px;
        display: block;
        text-align: right;
        border-top: 1px solid rgba(255,255,255,0.2);
    }

    .icon {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 3rem;
        opacity: 0.5;
    }
</style>

<div class="row g-4">
    <div class="col-lg-3 col-6">
        <div class="small-box bg-info position-relative">
            <div class="inner p-3">
                <h3>@ViewBag.Orders</h3>
                <p>All Orders</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a href="/Admin/Order/Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-success position-relative">
            <div class="inner p-3">
                <h3>@ViewBag.ApprovedOrders</h3>
                <p>Approved Orders</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="/Admin/Order/Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning position-relative">
            <div class="inner p-3">
                <h3>@ViewBag.Users</h3>
                <p>User Registrations</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a href="/Admin/Users/Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-danger position-relative">
            <div class="inner p-3">
                <h3>@ViewBag.Product</h3>
                <p>Products</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="/Admin/Product/Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</div>


