<!-- ChartJS Setup -->
<script>
    const ctx = document.getElementById('sales-chart').getContext('2d');
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
        datasets: [
          {
            label: 'This year',
            data: [1200, 1900, 3000, 5000, 2300],
            borderColor: '#007bff',
            fill: false
          },
          {
            label: 'Last year',
            data: [1000, 1500, 2500, 4000, 2000],
            borderColor: '#ced4da',
            fill: false
          }
        ]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false
      }
    });
</script>