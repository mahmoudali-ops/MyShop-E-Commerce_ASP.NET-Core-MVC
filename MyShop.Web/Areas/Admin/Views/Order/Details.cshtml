@model OrderVM
@using MyShop.Utilities
@{
    ViewBag.CardTitle = "View Orders Details";
    ViewBag.PageTitle = "Orders Details Management";
}
<div class="container my-5">
    <form method="post">
        <input type="hidden" asp-for="orderHeader.Id" />
        <div class="row g-4">
            <!-- Left Section: Pickup & Payment Details -->
            <div class="col-lg-8">
                <div class="card shadow-lg rounded-4 border-0">
                    <div class="card-body">
                        <h3 class="mb-4 text-primary fw-bold">Pickup & Payment Details</h3>
                        <div class="row g-3">

                            <div class="col-md-6">
                                <label class="form-label">Name</label>
                                <input asp-for="orderHeader.Name" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Phone</label>
                                <input asp-for="orderHeader.PhoneNumber" class="form-control" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Address</label>
                                <input asp-for="orderHeader.Address" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">City</label>
                                <input asp-for="orderHeader.City" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input asp-for="orderHeader.applicationUser.Email" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Order Date</label>
                                <input asp-for="orderHeader.OrderDate" type="date" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Carrier</label>
                                <input id="carrier" asp-for="orderHeader.Carrier" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Tracking Number</label>
                                <input id="track" asp-for="orderHeader.TrackingNumber" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Shipping Date</label>
                                <input asp-for="orderHeader.ShippingDate" type="date" class="form-control" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Session ID</label>
                                <input asp-for="orderHeader.SessionId" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Payment Intent ID</label>
                                <input asp-for="orderHeader.PaymentInetId" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Payment Date</label>
                                <input asp-for="orderHeader.PatmentDate" type="date" class="form-control" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Payment Status</label>
                                <input asp-for="orderHeader.PaymentStatus" class="form-control" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Section: Order Summary (inside the form now) -->
            <div class="col-lg-4">
                <div class="card shadow-lg rounded-4 border-0 h-100">
                    <div class="card-body d-flex flex-column">
                        <h4 class="card-title text-center text-secondary mb-4 fw-bold">Order Summary</h4>

                        <div class="alert alert-info text-center fw-semibold mb-4">
                            Order Status: <strong>@Model.orderHeader.OrderStatus</strong>
                        </div>

                        @foreach (var item in Model.orderDetails)
                        {
                            <div class="border-bottom pb-2 mb-2">
                                <div class="d-flex justify-content-between">
                                    <strong>@item.product.Name</strong>
                                    <span class="text-success fw-semibold">@((item.Price * item.Count).ToString("c"))</span>
                                </div>
                                <small class="text-muted">Price: @item.Price | Quantity: @item.Count</small>
                            </div>
                        }

                        <div class="bg-dark text-white text-end py-3 px-4 rounded fw-bold mt-3">
                            TOTAL: $@Model.orderHeader.TotalCost
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            @if (Model.orderHeader.OrderStatus == SD.Approve)
                            {
                                <button type="submit" asp-action="StartProcess" class="btn btn-outline-primary">
                                    Start Processing
                                </button>
                            }
                            @if (Model.orderHeader.OrderStatus == SD.Proccessing)
                            {
                                <button onclick="return  CheckData()" type="submit" asp-action="StartShipping" class="btn btn-outline-success">
                                    Start Shipping
                                </button>
                            }
                            @if (Model.orderHeader.OrderStatus != SD.Cancled && Model.orderHeader.OrderStatus != SD.Refund)
                            {
                                <button type="submit" asp-action="CancleOrder" class="btn btn-outline-danger">
                                    Cancel Order
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Submit Button at the Bottom -->
            <div class="col-12">
                <button type="submit" asp-action="UpdataOrderDetails" class="btn btn-primary w-100 mt-3">
                    <i class="bi bi-save me-2"></i>Update Pickup Details
                </button>
            </div>
        </div>
    </form>
</div>


@section scripts {
    <script>
        function CheckData() {
           if(document.getElementById("carrier").value == "" || document.getElementById("track").value == "") {
        Swal.fire({
              title: "There is a error",
              text: " Carrier and Tracking Number secction Can't be empty !",
              icon: "warning",
              confirmButtonColor: "#3085d6",
              cancelButtonColor: "#d33",
          });
          return false;
            }
            return true;
           
        }
    </script>
}
