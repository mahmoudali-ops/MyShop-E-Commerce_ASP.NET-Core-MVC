@page
@using MyShop.Utilities
@model RegisterModel
@{
}

<h1>@ViewData["Title"]</h1>
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row align-items-center">
        
            <!-- Form Section -->
            <div class="col-md-7">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2>Create a new account.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Name" class="form-control" />
                        <label asp-for="Input.Name">Name</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Address" class="form-control" />
                        <label asp-for="Input.Address">Address</label>
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.City" class="form-control" />
                        <label asp-for="Input.City">City</label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    @if (User.IsInRole(SD.AdminRole))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Select Role:</label><br />
                            <input type="radio" value="@SD.AdminRole" name="UserRole" /> @SD.AdminRole
                            <input type="radio" value="@SD.CustomerRole" name="UserRole" class="ms-3" /> @SD.CustomerRole
                            <input type="radio" value="@SD.EditorRole" name="UserRole" class="ms-3" /> @SD.EditorRole
                        </div>
                    }

                    <button id="registerSubmit"
                            type="submit"
                            class="btn btn-primary btn-lg w-100 mt-4 d-flex align-items-center justify-content-center gap-2 shadow rounded-4 transition"
                            style="font-weight: 500;">
                        <i class="bi bi-person-plus-fill fs-5"></i>
                        <span>
                            @(User.IsInRole(SD.AdminRole) ? "Create new user" : "Register")
                        </span>
                    </button>
                </form>
            </div>

            <!-- Image Section -->
            <div class="col-md-5 text-center">
                <img src="~/images/loginimg/login1.jpg"
                     alt="Register illustration"
                     class="img-fluid rounded-4 shadow-sm transition"
                     style="max-height: 450px; object-fit: cover;" />
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
