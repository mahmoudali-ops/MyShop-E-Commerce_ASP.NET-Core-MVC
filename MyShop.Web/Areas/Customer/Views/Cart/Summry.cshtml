@model ShopingCartVM
@using Microsoft.Extensions.Options
@inject IOptions<MyShop.Utilities.StripeKey> Stripe

<section class="h-100" style="background: linear-gradient(to right, #f8f9fa, #e9ecef);">
    <div class="container py-4 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-lg-11 col-xl-10">
                <div class="card shadow-lg rounded-4">
                    <div class="card-header bg-white border-0 py-3 px-4">
                        <h5 class="text-muted mb-0">Order Summary</h5>
                    </div>
                    <form method="post" asp-action="Summry">
                        <input type="hidden" asp-for="OrderHeader.Id" />  @*  Important *@
                        <div class="card-body px-4 pt-3 pb-0">

                            <!-- Billing Address -->
                            <div class="mb-4">
                                <h6 class="fw-bold text-primary mb-3">
                                    <i class="bi bi-geo-alt-fill me-2"></i>Billing Address
                                </h6>
                                <div class="p-3 bg-light rounded-4 shadow-sm border">
                                    <div class="row mb-2">
                                        <div class="col-sm-4 fw-semibold text-dark">Name:</div>
                                        <div class="col-sm-8">
                                            <input asp-for="OrderHeader.Name" class="form-control-plaintext text-muted" readonly />
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4 fw-semibold text-dark">Address:</div>
                                        <div class="col-sm-8">
                                            <input type="text" class="form-control" asp-for="OrderHeader.Address"/>
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4 fw-semibold text-dark">City:</div>
                                        <div class="col-sm-8">
                                            <input type="text" class="form-control" asp-for="OrderHeader.City" />
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4 fw-semibold text-dark">Phone number:</div>
                                        <div class="col-sm-8">
                                            <input type="text" class="form-control" asp-for="OrderHeader.PhoneNumber" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Items -->
                            <h6 class="fw-bold text-primary mb-3">
                                <i class="bi bi-bag-check-fill me-2"></i>Your Items
                            </h6>
                            @foreach (var item in Model.CartsList)
                            {
                                <div class="p-3 mb-3 bg-light rounded-4 shadow-sm border">
                                    <div class="row align-items-center g-3">
                                        <div class="col-2">
                                            <img src="@item.product.Img" class="img-fluid rounded-3" alt="@item.product.Name">
                                        </div>
                                        <div class="col text-muted small">
                                            <div class="fw-semibold text-dark mb-1">@item.product.Name</div>
                                            <div>@item.product.Description</div>
                                            <div class="text-muted">Qty: @item.Count</div>
                                        </div>
                                        <div class="col-auto text-end">
                                            <div class="fw-bold text-dark h6 mb-0">$@item.product.Price</div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Summary Footer -->
                            <div class="card-footer bg-primary text-white px-4 py-4 rounded-bottom shadow-sm mt-4">
                                <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                                    <div class="mb-3 mb-md-0">
                                        <h6 class="mb-1 text-uppercase">
                                            <i class="bi bi-credit-card-fill me-2"></i>Total Paid:
                                        </h6>
                                        <span class="h4 fw-bold">$@Model.TotalCost</span>
                                    </div>
                                    <button type="submit" class="btn btn-success btn-lg px-4 shadow-sm">
                                        <span>Place order <i class="fas fa-long-arrow-alt-right ms-2"></i></span>
                                    </button>
                                </div>
                            </div>

                        </div> <!-- end card-body -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
